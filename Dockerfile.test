FROM python:3.11-slim

# Security: Create non-root user
RUN groupadd -r proxy && useradd -r -g proxy proxy

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    gcc \
    libpcap-dev \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy test dependencies
COPY requirements-test.txt .
RUN pip install --no-cache-dir -r requirements-test.txt

# Copy application and test files
COPY proxy.py .
COPY tests/ tests/
COPY config/ config/

# Create test reports directory
RUN mkdir -p reports && chown -R proxy:proxy /app

# Switch to non-root user
USER proxy

# Run tests
CMD ["pytest", "tests/", "-v", "--cov=proxy", "--cov-report=html:reports/coverage", "--junitxml=reports/junit.xml"]