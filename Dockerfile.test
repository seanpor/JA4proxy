FROM python:3.11-slim

# Security: Create non-root user - may already exist in base image
RUN groupadd -r proxy 2>/dev/null || true
RUN useradd -r -g proxy proxy 2>/dev/null || true

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    gcc \
    libpcap-dev \
    libssl-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy test dependencies
COPY requirements-test.txt .
RUN pip install --no-cache-dir -r requirements-test.txt

# Copy application and test files
COPY proxy.py .
COPY tests/ tests/
COPY config/ config/
COPY security/ security/

# Create test reports directory
RUN mkdir -p reports && chown -R proxy:proxy /app

# Switch to non-root user
USER proxy

# Health check for test container
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# Run tests by default
CMD ["pytest", "tests/", "-v", "--cov=proxy", "--cov-report=html:reports/coverage", "--cov-report=term", "--junitxml=reports/junit.xml"]
